<% @page_title = "Login" %>
<!DOCTYPE html>
<html lang="en">
  <head>
    <%= stylesheet_link_tag "signin" %>
  </head>

  <body>
    <div class="container">
      <div class="form-signin" style="margin-top:120px; background:#FFFFFF; box-shadow:0px 0px 10px #666666; border:1px solid #CCCCCC; width:330px">
        <%= form_for(:user, :url => {:action => 'login'}, :id => 'login-form') do |f| %>
          <h2 class="form-signin-heading headline">User Login</h2>
          <div class="line"></div>
          <div class="control-group">
            <%= f.telephone_field(:mobile_no, :class => "form-control spacing", :placeholder => "Mobile No", :autofocus => true, :id => 'mobile_no') %>
          </div>
          <div class="control-group">
            <%= f.password_field(:password, :class => "form-control", :placeholder => "Password", :id =>  'password') %>
          </div>
          <%= f.check_box(:remember_me, :name => "_remember_me") %> <span style="font-size:13px; vertical-align:top; font-family: Arial,sans-serif">Stay signed in</span>
          <div class="spacing"></div>
          <%= submit_tag("Log In", :class => "btn btn-lg btn-success btn-block") %>
        <% end %>
      </div>
    </div>
    <script type="text/javascript">

    </script>
  </body>
</html>